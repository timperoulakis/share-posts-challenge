<% content_for(:html_title) { "#{truncate(@post.title, length: 30, separator: " ")} - NiouzShare" } %>

<%= link_to "Back to posts", posts_path, class: "btn btn-primary mt-3" %>

<%= render partial: "post", locals: { post: @post } %>

<div class="comments">
  <% @post.comments.each do |comment| %>
    <%= render partial: "comments/comment", locals: { comment: comment } %>
  <% end %>
</div>

<%= render "comments/form" %>
