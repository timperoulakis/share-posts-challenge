<% content_for(:html_title) { "#{truncate(@post.title, length: 30, separator: " ")} - NiouzShare" } %>
<h1>Posts#show</h1>
<p>Find me in app/views/posts/show.html.erb</p>
<h2><%= @post.title %></h2>
<p><%= @post.content %></p>
<%= link_to "source", @post.url, target: "_blank" %>
<%= link_to "Back to posts", posts_path %>

<% @post.comments.each do |comment| %>
  <%= comment.content %>
  <%= comment.user.nickname %>
<% end %>

<%= render "comments/form" %>
